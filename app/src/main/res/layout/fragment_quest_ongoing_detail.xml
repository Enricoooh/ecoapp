<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fixedBottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/questImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="@string/quest_image" />

            <TextView
                android:id="@+id/txtQuestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quest_name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/txtQuestType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quest_type"
                android:layout_marginTop="6dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtQuestDescription"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="14dp"
                android:text="@string/quest_description" />

            <TextView
                android:id="@+id/txtQuestRewardPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quest_reward_points"
                android:layout_marginTop="8dp"
                android:textColor="#4CAF50" />

            <LinearLayout
                android:id="@+id/containerEuGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp" />
            
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Barra inferiore fissata in basso -->
    <LinearLayout
        android:id="@+id/fixedBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?android:attr/windowBackground"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtProgressStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quest_current_progress"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:indicatorColor="@android:color/holo_blue_dark"
            app:trackColor="#E0E0E0"
            app:trackCornerRadius="4dp"
            app:trackThickness="4dp"
            android:progress="0"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
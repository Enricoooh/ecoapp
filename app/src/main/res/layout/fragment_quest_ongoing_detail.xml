<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/fixedBottomBar"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Immagine della Quest -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/questImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.LargeComponent"
                tools:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Titolo della Quest -->
                <TextView
                    android:id="@+id/txtQuestName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:text="@string/quest_name" />

                <!-- Tipo della Quest -->
                <TextView
                    android:id="@+id/txtQuestType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="#757575"
                    android:textStyle="italic"
                    android:text="@string/quest_type"/>

                <!-- Card Statistiche (CO2 e Punti) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E0E0E0">

                    <!-- Layout per entrambi i valori -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:weightSum="2">

                        <!-- Layout valore di sinistra -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!-- Scritta sopra il valore -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quest_CO2_saved_label"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:textColor="?android:attr/textColorPrimary"
                                android:letterSpacing="0.1" />

                            <!-- Valore effettivo -->
                            <TextView
                                android:id="@+id/txtCO2saved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold"
                                android:text="@string/quest_CO2_saved" />

                        </LinearLayout>

                        <!-- Divisorio -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="#EEEEEE" />

                        <!-- Layout valori di destra -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!-- Scritta sopra il valore -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quest_reward_points_label"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:textColor="?android:attr/textColorPrimary"
                                android:letterSpacing="0.1" />

                            <!-- Valore effettivo -->
                            <TextView
                                android:id="@+id/txtQuestRewardPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                                android:textColor="#4CAF50"
                                android:textStyle="bold"
                                android:text="@string/quest_reward_points" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Label Descrizione -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/quest_description_label"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="?attr/colorPrimary" />

                <!-- Descrizione -->
                <TextView
                    android:id="@+id/txtQuestDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="@string/quest_description"/>

                <!-- Label Obiettivi EU -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/quest_image_eu_goals_label"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="?attr/colorPrimary"/>

                <!-- Obiettivi EU -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/containerEuGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:chipSpacingHorizontal="10dp"
                    app:chipSpacingVertical="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAbandonQuest"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/quest_button_abandon_quest"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#d60000"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Barra inferiore FISSA -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fixedBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?android:attr/windowBackground">

            <TextView
                android:id="@+id/txtProgressStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quest_current_progress"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:letterSpacing="0.1"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:indicatorColor="@android:color/holo_blue_dark"
                app:trackColor="#E0E0E0"
                app:trackCornerRadius="8dp"
                app:trackThickness="8dp"
                android:progress="0"/>

            <!-- Pulsanti Incremento/Decremento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="4">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDecrement10"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/quest_minus_ten_label"
                    android:textColor="@android:color/holo_blue_dark"
                    app:strokeColor="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    android:padding="0dp"
                    app:cornerRadius="20dp"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDecrement"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/quest_minus_one_label"
                    android:textColor="@android:color/holo_blue_dark"
                    app:strokeColor="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    android:padding="0dp"
                    app:cornerRadius="20dp"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonIncrement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/quest_plus_one_label"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    android:padding="0dp"
                    app:cornerRadius="20dp"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonIncrement10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/quest_plus_ten_label"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    android:padding="0dp"
                    app:cornerRadius="20dp"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <!-- Pulsante Azione Finale -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCompleteQuest"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="@string/quest_button_complete_quest"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_blue_dark"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Escludi le preferenze di autenticazione dal backup per evitare
             che token invalidi vengano ripristinati su nuove installazioni -->
        <exclude domain="sharedpref" path="EcoAppPrefs.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- Escludi anche nel trasferimento dispositivo-dispositivo -->
        <exclude domain="sharedpref" path="EcoAppPrefs.xml"/>
    </device-transfer>
</data-extraction-rules>